<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.cn.youyi.service.User" table="user" schema="gamesale">
        <id name="uid" column="uid">
            <generator class="native" />
        </id>
        <property name="name" column="name"/>
        <property name="password" column="password"/>
        <property name="sex" column="sex"/>
        <property name="phone" column="phone"/>
        <property name="IDcard" column="IDcard"/>
        <property name="experience" column="experience"/>
        <property name="headphoto" column="headphoto"/>
        <!--配置多对一的关系：  放置的是1的一方-->
        <many-to-one name="usertype" class="com.cn.youyi.service.Usertype" column="typeid" />
    </class>
</hibernate-mapping>
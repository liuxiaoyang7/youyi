<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.cn.youyi.entity.Post" table="post" schema="gamesale">
        <id name="pid">
            <column name="pid" sql-type="int(5)"/>
        </id>
        <property name="pcontent">
            <column name="pcontent" sql-type="varchar(225)" length="225" not-null="true"/>
        </property>
        <property name="pimg">
            <column name="pimg" sql-type="varchar(225)" length="225" not-null="true"/>
        </property>
        <property name="publishtime">
            <column name="publishtime" sql-type="datetime" not-null="true"/>
        </property>
        <property name="cid">
            <column name="cid" sql-type="int(5)" not-null="true"/>
        </property>
        <property name="pbid">
            <column name="pbid" sql-type="int(5)" not-null="true"/>
        </property>
        <many-to-one name="posttypeByPtid" class="com.cn.youyi.entity.Posttype">
            <column name="ptid" not-null="true"/>
        </many-to-one>
        <many-to-one name="userByUid" class="com.cn.youyi.entity.User">
            <column name="uid" not-null="true"/>
        </many-to-one>
        <many-to-one name="commodityByCid" class="com.cn.youyi.entity.Commodity">
            <column name="cid" not-null="true"/>
        </many-to-one>
        <many-to-one name="postbarByPbid" class="com.cn.youyi.entity.Postbar">
            <column name="pbid" not-null="true"/>
        </many-to-one>
        <set name="commentsByPid" inverse="true">
            <key>
                <column name="pid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.cn.youyi.entity.Comment"/>
        </set>
    </class>
</hibernate-mapping>
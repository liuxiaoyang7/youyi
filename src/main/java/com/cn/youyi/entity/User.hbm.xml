<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.cn.youyi.entity.User" table="user" schema="gamesale">
        <id name="uid">
            <column name="uid" sql-type="int(5)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="varchar(4)" length="4" not-null="true"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="int(15)" not-null="true"/>
        </property>
        <property name="iDcard">
            <column name="IDcard" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="experience">
            <column name="experience" sql-type="int(5)" not-null="true"/>
        </property>
        <property name="headphoto">
            <column name="headphoto" sql-type="varchar(225)" length="225" not-null="true"/>
        </property>
        <many-to-one name="usertypeByTypeid" class="com.cn.youyi.entity.Usertype">
            <column name="typeid" not-null="true"/>
        </many-to-one>
        <set name="commentsByUid" inverse="true">
            <key>
                <column name="uid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.cn.youyi.entity.Comment"/>
        </set>
        <set name="commoditiesByUid" inverse="true">
            <key>
                <column name="uid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.cn.youyi.entity.Commodity"/>
        </set>
        <set name="postsByUid" inverse="true">
            <key>
                <column name="uid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.cn.youyi.entity.Post"/>
        </set>
    </class>
</hibernate-mapping>